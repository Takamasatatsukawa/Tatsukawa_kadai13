<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebRailsSessionLoginTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <% if logged_in? %>
      <%= link_to "タスク一覧", tasks_path, id: 'tasks-index' %>
      <%= link_to "タスクを登録する", new_task_path, id:'new-task' %>
      <%= link_to "アカウント", user_path(current_user.id), id: 'my-account' %>
      <%= link_to "ログアウト", session_path(current_user.id), method: :delete, id: 'sign-out'  %>
    <% else %>
    
    <%= link_to "タスク編集", edit_task_path(@task) if @task.present? %>
      <%= link_to "アカウント登録", new_user_path, id: 'sign-up' %>
      <%= link_to "ログイン", new_session_path, id: 'sign-up' %>
    <% end %>
    <%= yield %>
  </body>
</html>
